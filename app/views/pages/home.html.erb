
<% if signed_in? %>
	<table class="front"	summary="For signed-in users">
		<tr>
			<td class="main">
				<h1 class="micropost">What is on your mind?</h1>
				<%= render 'shared/micropost_form'%>
				<%= render 'shared/feed' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
			</td>
		</tr>
	</table>
<% else %>
	<h1>Qwyzmo</h1>
	<p>
		This is the home page for the Qwyzmo site. Powered by <a href="http://www.ubuntu.com">Ubuntu</a>
	</p>
	<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>


