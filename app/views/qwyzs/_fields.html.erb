
<%= form_for(@qwyz) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<span>Name</span>
	<div id="qwyz_name">
		<%= f.text_area :name %>
	</div>
	<span>Question</span>
	<div id="qwyz_question">
		<%= f.text_area :question %>
	</div>
	<span>Description</span>
	<div id="qwyz_description">
		<%= f.text_area :description %>
	</div>
	<div class="actions">
		<%= f.submit action_name %>
	</div>
<% end %>