<h1>Edit Account Info</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class='field'>
		<%= f.label :name %><br/>
		<%= f.text_field :name%>
	</div>
	<div class= 'field'>
		<%= f.label :email%><br/>
		<%= f.text_field :email%>
	</div>
	<div class='field'>
		<%= f.label "Current password"%><br/>
		<%= f.password_field :password%>
	</div>
	<div class='actions'>
		<%= f.submit "Update" %>
	</div>
<% end %>
<%= link_to "Change Password", edit_password_path %>
