
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class='field'>
		<%= f.label :name %><span class="label-note">(required)</span><br/>
		<%= f.text_field :name%>
	</div>
	<div class= 'field'>
		<%= f.label :email%><span class="label-note">(required)</span><br/>
		<%= f.text_field :email%>
	</div>
	<div class='field'>
		<%= f.label :password%><span class="label-note">(required)</span><br/>
		<%= f.password_field :password%>
	</div>
	<div class='field'>
		<%= f.label :password_confirmation, "Confirm password"%>
		<span class="label-note">(required)</span><br/>
		<%= f.password_field :password_confirmation%>
	</div>
	<div class='actions'>
		<%= f.submit action_name%>
	</div>
<% end %>
