<h1>Change Password</h1>
<h4>for <%= @user.name%></h4>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<%= hidden_field_tag :change_password, "true" %>
	<div class='field'>
		<%= f.label :password, "Current password"%><br/>
		<%= f.password_field :password %>
	</div>
	<div class='field'>
		<%= label_tag :new_password, "New password"%><br/>
		<%= password_field_tag :new_password %>
	</div>
	<div class='field'>
		<%= label_tag :new_password_confirm, "Confirm new password"%><br/>
		<%= password_field_tag :new_password_confirm %>
	</div>
	<div class='actions'>
		<%= f.submit "Change Password"%>
	</div>
<% end %>