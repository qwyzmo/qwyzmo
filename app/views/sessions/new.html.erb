
<div class="field-page-body">
	<h1>Sign in</h1>
	
	<%= form_for(:session, url: sessions_path) do |f| %>
		<div class="field">
			<%= f.label :email %><br/>
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %><br/>
			<%= f.password_field :password %>
		</div>
		<div class="actions">
			<%= f.submit "Sign in" %><br/>
		</div>
	<% end %>
	<p><%= link_to "Forgot password?", forgot_password_path %></p>
	<p>New User? <%= link_to "Sign up now!", signup_path %></p>
</div>
