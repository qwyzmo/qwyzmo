<header>
	<div id="topbar">
		<h3 id="logo" >Qwyzmo</h3>
	</div>

	<nav id="navbar" class="round">
		<ul>
			<li>
				<%= link_to "Home", root_path %>
			</li>
			<% if signed_in? %>
				<li><%= link_to "My Qwyzs", qwyzs_path %></li>
				<li><%= link_to "Edit Account", 
						edit_user_path(current_user)%></li>
			<% end %>
			<% if signed_in? %>
				<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
			<% else %>
				<li><%= link_to "Sign in", signin_path %></li>
			<% end %>
		</ul>
	</nav>
</header>
